<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
        <!-- SQL Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
 
        <!-- Database Connection Settings -->
        <property name="hibernate.hbm2ddl.auto">create/update</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
        <property name="hibernate.connection.username">Vijay_kumar</property>
        <property name="hibernate.connection.password">seetamma</property>
        <property name="show_sql">true</property>
         <property name="format_sql">true</property>
       
 
        <!-- Mapping With Model Class Containing Annotations -->
        <mapping class="com.vidvaan.one2many.bean.Department" />
                <mapping class="com.vidvaan.one2many.bean.Employee" />
    </session-factory>
</hibernate-configuration>